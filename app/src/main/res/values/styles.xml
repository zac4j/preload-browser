<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="RedAnimation">
    <item name="android:windowEnterAnimation">@anim/red_packet_enter</item>
    <item name="android:windowExitAnimation">@anim/red_packet_exit</item>
  </style>

  <style name="PacketAnimation">
    <item name="android:windowEnterAnimation">@anim/red_packet_in</item>
    <item name="android:windowExitAnimation">@anim/red_packet_out</item>
  </style>

</resources>
